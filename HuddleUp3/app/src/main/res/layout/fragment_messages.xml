<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:columnOrderPreserved="false">

    <!--row 1-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/messagerowfrom1"
        android:id="@+id/from1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="left"
        android:textColor="@color/text_primary"
        android:onClick="onClick"
        android:clickable="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/messagerowdate1"
        android:id="@+id/date1"
        android:layout_row="0"
        android:layout_column="12"
        android:elegantTextHeight="true"
        android:textColor="@color/text_primary"
        android:onClick="onClick"
        android:clickable="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/messagerowpreview1"
        android:id="@+id/preview1"
        android:layout_row="1"
        android:layout_column="0"
        android:textColor="@color/text_secondary"
        android:onClick="onClick"
        android:clickable="true"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_row="2"
        android:layout_column="0"
        android:background="#31423d42"
        android:layout_marginTop="10dp"
        android:id="@+id/border1"
        android:layout_marginBottom="10dp" />

    <!--row 2-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/messagerowfrom2"
        android:id="@+id/from2"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="left"
        android:textColor="@color/text_primary" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/messagerowdate2"
        android:id="@+id/date2"
        android:layout_row="3"
        android:layout_column="12"
        android:textColor="@color/text_primary"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/messagerowpreview2"
        android:id="@+id/preview2"
        android:layout_row="4"
        android:layout_column="0"
        android:textColor="@color/text_secondary" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_row="5"
        android:layout_column="0"
        android:background="#31423d42"
        android:layout_marginTop="10dp"
        android:id="@+id/border2"
        android:layout_marginBottom="10dp" />

    <ImageButton
        style="@style/FloatingActionButton"
        android:id="@+id/addButton"
        android:layout_row="26"
        android:layout_column="12"
        android:src="@android:drawable/ic_input_add"
        android:layout_columnSpan="3"/>


</GridLayout>